{
  "name": "@fuzzy/simulation-engine",
  "version": "1.0.0",
  "description": "Educational simulations wrapper for PhET and other STEM tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@fuzzy/external-games": "file:../external-games",
    "@fuzzy/schemas": "file:../schemas"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "tsup": "^7.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "private": false,
  "type": "module",
  "files": [
    "dist"
  ]
}
