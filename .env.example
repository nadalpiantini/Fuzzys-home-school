###############################################
# Fuzzy's Home School — Canonical .env.example
# Regla: SOLO valores de ejemplo. Nada real.
###############################################

# ===== Public (expuestos en cliente) =====
# Se leen en componentes "use client" y bundle de frontend
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY
NEXT_PUBLIC_APP_URL=https://your-app.example.com

# Feature flags (cliente)
NEXT_PUBLIC_EXTERNAL_GAMES_ENABLED=false
NEXT_PUBLIC_PHET_ENABLED=false
NEXT_PUBLIC_BLOCKLY_ENABLED=false
NEXT_PUBLIC_MUSIC_BLOCKS_ENABLED=false
NEXT_PUBLIC_AR_ENABLED=false

# Config opcional de features (cliente)
NEXT_PUBLIC_AR_MARKER_BASE_URL=/ar-markers
NEXT_PUBLIC_AR_MODELS_BASE_URL=/models
NEXT_PUBLIC_PHET_BASE_URL=https://phet.colorado.edu
NEXT_PUBLIC_PHET_LANGUAGE=es
NEXT_PUBLIC_BLOCKLY_BASE_URL=https://blockly.games
NEXT_PUBLIC_BLOCKLY_LANGUAGE=es
NEXT_PUBLIC_MUSIC_BLOCKS_URL=https://musicblocks.sugarlabs.org

# (Pendiente de validación en paso siguiente)
NEXT_PUBLIC_WEBSOCKET_URL=wss://your-realtime.example.com

# ===== Server-only (NO NEXT_PUBLIC_) =====
# Nunca usar en cliente. Solo API Routes / Server Actions.
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
SUPABASE_JWT_SECRET=YOUR_SUPABASE_JWT_SECRET

# Si usas DB propia (si solo usas Supabase, puedes omitirla)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Proveedor IA (elige uno; no mezcles)
# --- DeepSeek vía endpoint OpenAI-compatible ---
DEEPSEEK_API_KEY=YOUR_DEEPSEEK_API_KEY
OPENAI_BASE_URL=https://api.deepseek.com
# --- o OpenAI oficial ---
# OPENAI_API_KEY=YOUR_OPENAI_API_KEY
# (si usas OpenAI oficial, elimina OPENAI_BASE_URL)

# Node/Next env
NODE_ENV=development
