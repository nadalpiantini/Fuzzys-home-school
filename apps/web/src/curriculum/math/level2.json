  "chapters": [
    {
      "id": "fracciones-01",
      "title": "Fracciones Mágicas: Mitades y Cuartos",
      "goals": [
        "Entender el concepto de mitad",
        "Reconocer fracciones 1/2 y 1/4",
        "Dividir objetos en partes iguales"
      ],
      "activities": [
        {
          "type": "external",
          "component": "ExternalGame",
          "title": "Simulación de fracciones PhET",
          "data": {
            "source": "phet",
            "gameId": "fractions-intro",
            "url": "https://phet.colorado.edu/sims/html/fractions-intro/latest/fractions-intro_es.html",
            "description": "Explora fracciones de forma visual e interactiva"
          }
        },
        {
          "type": "internal",
          "component": "MCQ",
          "title": "¿Qué fracción es?",
          "data": {
            "questions": [
              {
                "question": "Si corto una pizza en 2 partes iguales, ¿qué fracción es cada parte?",
                "visual": "🍕➗2",
                "options": ["1/4", "1/2", "1/3"],
                "correct": 1,
                "explanation": "¡Exacto! Cada parte es 1/2 (la mitad)"
              },
              {
                "question": "Si corto una pizza en 4 partes iguales, ¿qué fracción es cada parte?",
                "visual": "🍕➗4",
                "options": ["1/2", "1/4", "1/3"],
                "correct": 1,
                "explanation": "¡Perfecto! Cada parte es 1/4 (un cuarto)"
              },
              {
                "question": "¿Cuántas mitades hay en una pizza completa?",
                "visual": "🍕",
                "options": ["1", "2", "4"],
                "correct": 1,
                "explanation": "¡Correcto! Una pizza tiene 2 mitades"
              }
            ]
          }
        },
        {
          "type": "internal",
          "component": "DragDrop",
          "title": "Une fracciones con dibujos",
          "data": {
            "prompt": "Arrastra cada fracción a su dibujo correspondiente",
            "items": [
              { "text": "1/2", "target": "mitad", "image": "🍕➗2" },
              { "text": "1/4", "target": "cuarto", "image": "🍕➗4" },
              { "text": "2/4", "target": "dos cuartos", "image": "🍕🍕" }
            ]
          }
        }
      ],
      "badge": "🧮",
      "badgeDescription": "Maestro de Fracciones"
    },
