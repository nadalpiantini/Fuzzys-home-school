{
  "name": "fuzzys-home-school",
  "version": "1.0.0",
  "private": true,
  "description": "Educational platform with AI tutoring, gamified learning, and AR/QR Colonial Zone exploration",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:migrate": "cd db && npm run migrate",
    "db:seed": "cd db && npm run seed",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Fuzzy's Home School Team",
  "license": "MIT"
}